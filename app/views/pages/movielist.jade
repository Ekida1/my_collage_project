extends ../layout

block content
  .container
    .row
      a.btn.btn-primary.backadmin(href="/preadmin") << 返回后台首页
      table.table.table-hover.table-bordered
        thead
          tr
            //- th 分类
            th 电影名字
            th 导演
            th 国家
            th 上映年份
            th 录入时间
            th 访客统计
            th 查看
            th 更新
            th 删除
        tbody
          each item in movies
            tr(class="item-id-#{item._id}")
              //- td #{item.category}
              td #{item.title}
              td #{item.productor}
              td #{item.country}
              td #{item.year}
              td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
              td #{item.pv}
              td: a(target="_blank", href="/movie/#{item._id}/#{item.category}") 查看
              td: a(target="_blank", href="/admin/movie/update/#{item._id}") 更新
              td
                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
  script(src="/js/delete_movie.js")
  style.
    .backadmin{
      margin-bottom:10px
    }