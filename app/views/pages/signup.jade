doctype
html
  head 
    meta(charset="utf-8")
    title #{title}
    include ../includes/head
  body
  .container
    .row
      .page-header
        h1= title
        small 来自hellobunny官方网站
  .container
    .row
      .col-md-5
        div
          .modal-header 注册
          .modal-body
            .form-group
              label(for="signupName")  用户名
              input.signupName.form-control(name="user[name]",type="text")
            .form-group
              label(for="signupPassword")  密码
              input.signupPassword.form-control(name="user[password]",type="password")
          .modal-footer
            button.btn.btn-default(type="button",data-dismiss="modal")  关闭
            button.btn.btn-primary(type="button" ,class="submit_register")  提交
  script(src="/js/signup_modal.js")
